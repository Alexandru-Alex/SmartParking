<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfete.ListaAutovehicule"
    android:background="@drawable/gradientbutondashboard"
    >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaautovehicule"
        android:layout_marginBottom="100dp"
        android:padding="4dp"
        android:scrollbars="vertical"/>

    <EditText
        android:id="@+id/insertnrinmatriculare"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:textColor="@color/alb"
        android:inputType="textCapCharacters"
        android:autofillHints="Nr de inmatriculare" />

    <Button
        android:id="@+id/btnnrnou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buton_login"
        android:layout_alignBottom="@id/insertnrinmatriculare"
        android:layout_toEndOf="@id/insertnrinmatriculare"

        android:text="@string/Nrnou" />
</RelativeLayout >